{
  "name": "js-visualize-plugins",
  "version": "1.0.0",
  "private": true,
  "description": "Plugins for Visualize.JS",
  "workspaces": {
    "packages": [
      "packages/jv-ui-components",
      "packages/jv-input-controls",
      "packages/jv-scheduler",
      "packages/*"
    ]
  },
  "scripts": {
    "test": "yarn workspaces run test",
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "start": "yarn workspace demo-input-controls run dev",
    "start:scheduler": "yarn workspace demo-scheduler run dev",
    "storybook": "yarn workspace @jaspersoft/jv-ui-components run storybook",
    "start:styles:dev": "yarn workspace @jaspersoft/jv-ui-components run start:dev",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jaspersoft/js-visualize-plugins.git"
  },
  "keywords": [
    "plugin",
    "visualize.js"
  ],
  "author": "Jaspersoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jaspersoft/js-visualize-plugins/issues"
  },
  "homepage": "https://github.com/Jaspersoft/js-visualize-plugins#readme",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.2"
  }
}
